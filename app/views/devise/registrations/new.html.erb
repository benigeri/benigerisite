<%= render "devise/shared/devise_header" %>

<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="formInput"><%= f.email_field :email, :placeholder => "Email" %></div>

  <div class="formInput"><%= f.password_field :password, :placeholder => "Password" %></div>

  <div class="formInput"><%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
<%= render "devise/shared/devise_footer" %>
