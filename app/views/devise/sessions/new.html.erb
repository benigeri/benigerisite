<%= render "devise/shared/devise_header" %>

<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="formInput"><%= f.email_field :email, :placeholder => "Email" %></div>

  <div class="formInput"><%= f.password_field :password, :placeholder => "Password" %></div>

  <div class="formInput"><%= f.submit "Sign in" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
<% end %>

<%= render "devise/shared/devise_footer" %>
