<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, :placeholder => "Post title..." %>
  </div>
  <div class="field editorContainer">
    <%= f.text_area :content, :id => "contentEditArea", :placeholder => "Post content..." %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <%= link_to 'Back', posts_path, :class => "backButton" %>
  </div>
<% end %>
